<head>
  <!-- Custom CSS -->
  <link href="full-slider.css" rel="stylesheet">
</head>
<body id="essay">
<!-- Full Page Image Background Carousel Header -->
<header id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
    <li data-target="#myCarousel" data-slide-to="5"></li>
  </ol>

  <!-- Wrapper for Slides -->
  <div class="carousel-inner">
    <div class="item active">
      <!-- Set the first background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='home.JPG', class: 'img-responsive') %></div>
      <div class="carousel-caption" id="customcaption">
        <h2>Landing Page of the Application</h2>
      </div>
    </div>
    <div class="item">
      <!-- Set the second background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='dash1.JPG', class: 'img-responsive')%></div>
      <div class="carousel-caption" id="customcaption">
        <h2>User Dashboard - Students can view and update their progress.</h2>
      </div>
    </div>
    <div class="item">
      <!-- Set the third background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='dash6.JPG', class: 'img-responsive')%></div>
      <div class="carousel-caption" id="customcaption">
        <h2>Leaderboard - Students and Board can see verified hour totals, and the Board can identify struggling students.</h2>
      </div>
    </div>
    <div class="item active">
      <!-- Set the fourth background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='dash2.JPG', class: 'img-responsive') %></div>
      <div class="carousel-caption" id="customcaption">
        <h2>Requests - All "Pending", and approved, student submissions are shown (Board Accounts Only).</h2>
      </div>
    </div>
    <div class="item active">
      <!-- Set the fifth background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='dash3.JPG', class: 'img-responsive') %></div>
      <div class="carousel-caption" id="customcaption">
        <h2>Individual Request - Each student submission can be approved or deleted (Board Accounts Only).</h2>
      </div>
    </div>
    <div class="item active">
      <!-- Set the sixth background image using inline CSS below. -->
      <div class="fill"><%=image_tag(src='dash4.JPG', class: 'img-responsive') %></div>
      <div class="carousel-caption" id="customcaption" >
        <h2>Users - The Board can manage Student accounts (Board Accounts Only).</h2>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>

</header>

<!-- jQuery -->
<script src="/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/bootstrap.min.js"></script>

<!-- Script to Activate the Carousel -->
<script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
</script>

</body>
