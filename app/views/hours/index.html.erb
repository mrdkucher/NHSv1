      <h2 class="sub-header" id="dashtext">Pending Hours</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr id="dashtexttable">
            <th>User</th>
            <th>Assignment</th>
            <th>Hours</th>
            <th>Supervisor/Location</th>
            <th>Date</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @allhours.each do |hour| %>
              <tr id="dashfield">
                <td><%= hour.user.first_name + " " +hour.user.last_name %></td>
                <td><%= hour.assignment %></td>
                <td><%= hour.hours %></td>
                <td><%= hour.supervisor %></td>
                <td><%= hour.date %></td>
                <td><%= link_to "See Log", hour_path(hour.id)%></td>
              </tr>
          <% end %>
          </tbody>
          </table>
        </div>

      <h2 class="sub-header" id="dashtext">Confirmed Hours</h2>
        <div class="table-responsive">
          <table class="table table-striped">
